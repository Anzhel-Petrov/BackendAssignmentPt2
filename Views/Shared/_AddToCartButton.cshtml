@*the add to cart button is repeated for every product so it makes sense to make it a partial view*@
@model BackendAssignmentPt2.Models.Product
<div class="col-md-6">
    <form id="@Model.ProductId" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" name="ProductID" value="@Model.ProductId" />
        @*hidden tag to return the URL*@
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <label for="quantity">Quantity:</label>
            @*display the dropdown quantity menu*@
            <select id="quantity" name="quantity" asp-items="@ViewData["Quantity"] as List<SelectListItem>"></select>
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>